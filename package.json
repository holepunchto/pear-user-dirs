{
  "name": "pear-user-dirs",
  "version": "1.0.1",
  "description": "Get the path of user-specific directories",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint && npm run test:node && npm run test:bare",
    "test:node": "node test.js",
    "test:bare": "bare test.js",
    "lint": "standard",
    "lint:fix": "standard --fix"
  },
  "imports": {
    "child_process": {
      "bare": "bare-subprocess",
      "default": "child_process"
    },
    "fs": {
      "bare": "bare-fs",
      "default": "fs"
    },
    "os": {
      "bare": "bare-os",
      "default": "os"
    },
    "path": {
      "bare": "bare-path",
      "default": "path"
    }
  },
  "standard": {
    "globals": [
      "Bare"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/holepunchto/pear-user-dirs.git"
  },
  "author": "Holepunch Inc.",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/holepunchto/pear-user-dirs/issues"
  },
  "homepage": "https://github.com/holepunchto/pear-user-dirs",
  "dependencies": {
    "bare-env": "^3.0.0",
    "bare-fs": "^4.0.0",
    "bare-os": "^3.3.0",
    "bare-path": "^3.0.0",
    "bare-subprocess": "^5.0.0",
    "url-file-url": "^1.0.2",
    "which-runtime": "^1.2.0"
  },
  "devDependencies": {
    "brittle": "^3.5.2",
    "standard": "^17.1.0"
  }
}
